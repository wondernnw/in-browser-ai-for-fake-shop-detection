  "compilerOptions": {
    "esModuleInterop": true,
    "checkJs": true,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": ["ESNext", "dom"]
  },
  "include": [
    "src/**/*.js", "scripts/**/*.js"
  ],
  "exclude": ["node_modules", "build", "dist"]
}
